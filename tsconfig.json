{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./types.d.ts"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}